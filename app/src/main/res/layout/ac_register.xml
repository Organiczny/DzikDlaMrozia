<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".AcRegister">

    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Rejestracja"
        android:textColor="@color/text_color_basic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <EditText
        android:id="@+id/ac_reg_et_name"

        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/et_basic_bg"
        android:ems="10"
        android:hint="Pseudonim"


        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:text="nick111"
        android:textAlignment="center"
        android:textColor="@color/text_color_on_but"

        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="94dp" />

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <EditText
        android:id="@+id/ac_log_et_email"

        android:ems="10"
        android:hint="email"

        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/et_basic_bg"
        android:textAlignment="center"
        android:textColor="@color/text_color_on_but"

        android:inputType="textEmailAddress"
        android:text="email11@wp.pl" />

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <EditText
        android:id="@+id/ac_log_et_code"
        android:ems="10"
        android:hint="pin"
        android:inputType="number|textPassword"

        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/et_basic_bg"
        android:textAlignment="center"
        android:textColor="@color/text_color_on_but"

        android:maxLength="4"
        android:selectAllOnFocus="false"
        android:text="1234"
 />

    <View
        android:id="@+id/view7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="3" />

    <TextView
        android:id="@+id/ac_log_tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/text_color_error"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ac_reg_but_confirm"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@drawable/but_basic_bg"
        android:text="Zajerestruj się"
        android:textColor="@color/text_color_on_but" />

    <View
        android:id="@+id/view8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1
" />

    <Button
        android:id="@+id/ac_reg_but_haveacc"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:background="@drawable/but_basic_bg"
        android:text="Mam już konto"
        android:textAlignment="center"
        android:textColor="@color/text_color_on_but"
        android:textSize="10sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

</LinearLayout>